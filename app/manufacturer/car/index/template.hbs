<div class="container">
  <div class="row">
    <div class="col col-md-12">
      <div class="panel panel-default clearfix">
        <div class="panel-heading">
          <h1>{{model.name}}</h1>
        </div>
        <div class="panel-footer">
          <p>
            <button class="btn btn-danger" {{action 'destroy'}}>Delete</button>
            {{#link-to "manufacturer.car.new" class="btn btn-warning pull-right"}}Add New Car{{/link-to}}
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    {{#each model.cars as |car|}}
      <div class="col col-md-4">
        <div class="panel panel-default clearfix">
          <div class="panel-heading">
            <h1>{{car.year}} - {{car.name}}</h1>
          </div>
          <div class="panel-body">
            <p>Horsepower - {{car.hp}}</p>
            <p>Price - {{car.price}}</p>
          </div>
          <div class="panel-footer">
            <p>
              <button class="btn btn-danger" {{action 'destroyCar' car}}>Delete</button>
            </p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

{{outlet}}
