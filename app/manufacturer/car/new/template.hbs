<div class="container">
  <form class="panel panel-default" {{action "save" on="submit"}}>
    <div class="panel-heading">
      <h2 class="col-sm-offset-1">Add New Car for {{model.name}}</h2>
    </div>
    <div class="panel-body">
      <div class="form-horizontal margin-top-2" >
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            {{input type="text" class="form-control" placeholder="Model Name" value=formValues.name}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            {{input type="text" class="form-control" placeholder="Year" value=formValues.year}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            {{input type="text" class="form-control" placeholder="Hp" value=formValues.hp}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-10 col-sm-offset-1">
            {{input type="text" class="form-control" placeholder="Price" value=formValues.price}}
          </div>
        </div>
      </div>
    </div>
    <div class="panel-footer">
      <p>
        {{#link-to 'manufacturer.car' class="btn btn-lg back-blue col-md-offset-1"}}Back{{/link-to}}
        <button type="submit" class="btn btn-lg sumbit-yellow">Sumbit</button>
      </p>
    </div>
  </form>
</div>
{{outlet}}
